---
/**
 * HeroSection - 首页大标题区域
 * 新粗野主义风格的主视觉区块
 */
interface Props {
  title: string;
  subtitle?: string;
  accentWord?: string;
}

const { title, subtitle, accentWord } = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero__content">
      <!-- Decorative background number -->
      <span class="text-giant hero__bg-text" aria-hidden="true">01</span>

      <div class="hero__text anim-enter">
        <h1 class="hero__title text-display">
          {title}
          {accentWord && <span class="hero__accent">{accentWord}</span>}
        </h1>
        {subtitle && <p class="hero__subtitle">{subtitle}</p>}
      </div>

      <div class="hero__visual anim-enter anim-delay-2">
        <div class="hero__grid-art" aria-hidden="true">
          <div class="hero__block hero__block--1"></div>
          <div class="hero__block hero__block--2"></div>
          <div class="hero__block hero__block--3"></div>
          <div class="hero__block hero__block--4"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="hero__bottom-bar"></div>
</section>

<style>
  .hero {
    position: relative;
    padding: var(--space-16) 0 0;
    overflow: hidden;
    border-bottom: var(--border-thick);
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero__content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-10);
    align-items: center;
    position: relative;
    padding-bottom: var(--space-12);
  }

  .hero__bg-text {
    top: -5%;
    right: 10%;
    font-size: clamp(8rem, 20vw, 16rem);
  }

  .hero__title {
    margin-bottom: var(--space-6);
    position: relative;
    z-index: var(--z-above);
  }

  .hero__accent {
    display: block;
    color: var(--color-surface);
    background: var(--color-border);
    padding: 0 var(--space-4);
    margin-top: var(--space-2);
    white-space: nowrap;
  }

  .hero__subtitle {
    font-size: var(--text-lg);
    max-width: 40ch;
    color: var(--color-text-muted);
    position: relative;
    z-index: var(--z-above);
  }

  /* Decorative geometric art */
  .hero__grid-art {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    max-width: 320px;
    margin-left: auto;
  }

  .hero__block {
    aspect-ratio: 1;
    border: var(--border-thick);
  }

  .hero__block--1 {
    background: var(--color-accent);
    box-shadow: var(--shadow-lg);
    transform: rotate(-2deg);
  }

  .hero__block--2 {
    background: var(--color-action);
    box-shadow: var(--shadow-lg);
    transform: translateY(20px) rotate(1deg);
  }

  .hero__block--3 {
    background: var(--color-link);
    box-shadow: var(--shadow-lg);
    transform: translateY(-10px) rotate(0.5deg);
  }

  .hero__block--4 {
    background: var(--color-border);
    box-shadow: var(--shadow-lg);
    transform: rotate(-1deg);
  }

  .hero__bottom-bar {
    height: 8px;
    background: repeating-linear-gradient(
      90deg,
      var(--color-border) 0px,
      var(--color-border) 20px,
      var(--color-accent) 20px,
      var(--color-accent) 40px,
      var(--color-action) 40px,
      var(--color-action) 60px,
      var(--color-link) 60px,
      var(--color-link) 80px
    );
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: var(--space-10) 0 0;
    }

    .hero__content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .hero__grid-art {
      max-width: 200px;
      margin: 0 auto;
    }
  }
</style>
