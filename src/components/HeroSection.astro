---
/**
 * HeroSection - 首页大标题区域
 * 新粗野主义风格的主视觉区块
 */
interface Props {
  title: string;
  subtitle?: string;
  accentWord?: string;
}

const { title, subtitle, accentWord } = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero__content">
      <!-- Decorative background number -->
      <span class="text-giant hero__bg-text" aria-hidden="true">01</span>

      <div class="hero__text anim-enter">
        <h1 class="hero__title text-display">
          {title}
          {accentWord && <span class="hero__accent">{accentWord}</span>}
        </h1>
        {subtitle && <p class="hero__subtitle">{subtitle}</p>}
      </div>

      <div class="hero__visual anim-enter anim-delay-2">
        <div class="hero__grid-art" aria-hidden="true">
          <div class="hero__block hero__block--1"></div>
          <div class="hero__block hero__block--2"></div>
          <div class="hero__block hero__block--3"></div>
          <div class="hero__block hero__block--4"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="hero__bottom-bar"></div>
</section>

<style>
  .hero {
    position: relative;
    padding: var(--space-16) 0 0;
    overflow: hidden;
    border-bottom: var(--border-thick);
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero__content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-10);
    align-items: center;
    position: relative;
    padding-bottom: var(--space-12);
  }

  .hero__bg-text {
    top: -5%;
    right: 10%;
    font-size: clamp(8rem, 20vw, 16rem);
  }

  .hero__title {
    margin-bottom: var(--space-6);
    position: relative;
    z-index: var(--z-above);
  }

  .hero__accent {
    display: block;
    color: var(--color-surface);
    background: var(--color-border);
    padding: 0 var(--space-4);
    margin-top: var(--space-2);
    white-space: nowrap;
  }

  .hero__subtitle {
    font-size: var(--text-lg);
    max-width: 40ch;
    color: var(--color-text-muted);
    position: relative;
    z-index: var(--z-above);
  }

  /* Decorative geometric art */
  .hero__grid-art {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    max-width: 320px;
    margin-left: auto;
  }

  .hero__block {
    aspect-ratio: 1;
    border: var(--border-thick);
  }

  .hero__block--1 {
    background: var(--color-accent);
    box-shadow: var(--shadow-lg);
    transform: rotate(-2deg);
    animation: block-drift-1 4s steps(8, end) infinite;
    animation-delay: 0s;
  }

  .hero__block--2 {
    background: var(--color-action);
    box-shadow: var(--shadow-lg);
    transform: translateY(20px) rotate(1deg);
    animation: block-drift-2 5s steps(8, end) infinite;
    animation-delay: 0.6s;
  }

  .hero__block--3 {
    background: var(--color-link);
    box-shadow: var(--shadow-lg);
    transform: translateY(-10px) rotate(0.5deg);
    animation: block-drift-3 4.5s steps(8, end) infinite;
    animation-delay: 1.2s;
  }

  .hero__block--4 {
    background: var(--color-border);
    box-shadow: var(--shadow-lg);
    transform: rotate(-1deg);
    animation: block-drift-4 5.5s steps(8, end) infinite;
    animation-delay: 0.3s;
  }

  /* Block hover: brutalist "click" snap */
  .hero__block {
    transition: transform 0.15s steps(3, end),
                box-shadow 0.15s steps(3, end);
    cursor: pointer;
  }

  .hero__block:hover {
    animation-play-state: paused;
    transform: translate(-6px, -6px) rotate(0deg) !important;
    box-shadow: 14px 14px 0px 0px var(--color-border);
  }

  .hero__block:active {
    transform: translate(2px, 2px) rotate(0deg) !important;
    box-shadow: 2px 2px 0px 0px var(--color-border);
  }

  /* ── Block drift keyframes ── */
  @keyframes block-drift-1 {
    0%   { transform: rotate(-2deg) translate(0, 0); }
    15%  { transform: rotate(-1deg) translate(5px, -8px); }
    30%  { transform: rotate(-3deg) translate(-3px, -12px); }
    50%  { transform: rotate(0deg) translate(8px, -5px); }
    70%  { transform: rotate(-2.5deg) translate(-5px, 4px); }
    85%  { transform: rotate(-1deg) translate(3px, 6px); }
    100% { transform: rotate(-2deg) translate(0, 0); }
  }

  @keyframes block-drift-2 {
    0%   { transform: translateY(20px) rotate(1deg); }
    20%  { transform: translate(-6px, 14px) rotate(2.5deg); }
    40%  { transform: translate(4px, 8px) rotate(0deg); }
    60%  { transform: translate(-8px, 22px) rotate(1.5deg); }
    80%  { transform: translate(6px, 18px) rotate(-0.5deg); }
    100% { transform: translateY(20px) rotate(1deg); }
  }

  @keyframes block-drift-3 {
    0%   { transform: translateY(-10px) rotate(0.5deg); }
    18%  { transform: translate(7px, -16px) rotate(-1deg); }
    36%  { transform: translate(-4px, -6px) rotate(1.5deg); }
    54%  { transform: translate(3px, -18px) rotate(-0.5deg); }
    72%  { transform: translate(-6px, -4px) rotate(2deg); }
    100% { transform: translateY(-10px) rotate(0.5deg); }
  }

  @keyframes block-drift-4 {
    0%   { transform: rotate(-1deg) translate(0, 0); }
    25%  { transform: rotate(0.5deg) translate(-5px, -10px); }
    50%  { transform: rotate(-2deg) translate(6px, -6px); }
    75%  { transform: rotate(1deg) translate(-3px, 8px); }
    100% { transform: rotate(-1deg) translate(0, 0); }
  }

  .hero__bottom-bar {
    height: 8px;
    background: repeating-linear-gradient(
      90deg,
      var(--color-border) 0px,
      var(--color-border) 20px,
      var(--color-accent) 20px,
      var(--color-accent) 40px,
      var(--color-action) 40px,
      var(--color-action) 60px,
      var(--color-link) 60px,
      var(--color-link) 80px
    );
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: var(--space-10) 0 0;
    }

    .hero__content {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .hero__grid-art {
      max-width: 200px;
      margin: 0 auto;
    }
  }
</style>
