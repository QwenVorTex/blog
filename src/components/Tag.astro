---
interface Props {
  label: string;
  variant?: 'default' | 'accent' | 'action' | 'link';
  href?: string;
}

const { label, variant = 'default', href } = Astro.props;

const variantClass = variant !== 'default' ? `tag--${variant}` : '';
const Tag = href ? 'a' : 'span';
---

{href ? (
  <a href={href} class:list={['tag', variantClass]}>{label}</a>
) : (
  <span class:list={['tag', variantClass]}>{label}</span>
)}
