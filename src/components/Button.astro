---
interface Props {
  label: string;
  href?: string;
  variant?: 'primary' | 'action' | 'ghost';
  size?: 'default' | 'small';
  external?: boolean;
}

const { label, href, variant = 'primary', size = 'default', external = false } = Astro.props;

const classes = [
  'btn',
  `btn--${variant}`,
  size === 'small' && 'btn--small',
].filter(Boolean);

const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

{href ? (
  <a href={href} class:list={classes} {...externalProps}>
    {label}
    {external && <span aria-hidden="true">â†—</span>}
  </a>
) : (
  <button class:list={classes} type="button">
    {label}
  </button>
)}
